<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/game_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/main_component_space"
    android:orientation="vertical">

    <Button
        android:id="@+id/game_buttonTrue1"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintTop_toTopOf="@+id/game_page"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:rotation="180"
        android:text="@string/game_button_play"
        android:textSize="@dimen/main_text_size"/>

    <TextView
        android:id="@+id/game_question1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/game_buttonTrue1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="@dimen/main_component_space"
        android:rotation="180"
        android:text="Question"
        android:textSize="@dimen/main_text_size"/>

    <TextView
        android:id="@+id/game_player1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/game_page"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:rotation="180"
        android:text="Nom joueur1"
        android:textSize="@dimen/main_text_size"/>

    <TextView
        android:id="@+id/game_player2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@id/game_page"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Nom joueur2"
        android:textSize="@dimen/main_text_size"/>

    <TextView
        android:id="@+id/game_question2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/game_buttonTrue2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="@dimen/main_component_space"
        android:text="Question"
        android:textSize="@dimen/main_text_size"/>

    <Button
        android:id="@+id/game_buttonTrue2"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintBottom_toBottomOf="@+id/game_page"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="@string/game_button_play"
        android:textSize="@dimen/main_text_size"/>

</androidx.constraintlayout.widget.ConstraintLayout>